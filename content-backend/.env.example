# Application Settings
APP_NAME=Content Management API
VERSION=1.0.0
DEBUG=False
PORT=8001
HOST=0.0.0.0

# Security
SECRET_KEY=your-secret-key-change-in-production-use-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/content_db

# Alternative: Supabase (if using Supabase instead of direct PostgreSQL)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# ChromaDB (embedded mode)
CHROMA_PERSIST_DIR=./chroma_data

# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4
EMBEDDING_MODEL=text-embedding-ada-002

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8501,https://artify-ruddy.vercel.app

# Logging
LOG_LEVEL=INFO

# Production Settings (for Render/deployment)
# DATABASE_URL will be automatically set by Render for PostgreSQL
# Set DEBUG=False in production
# Generate strong SECRET_KEY: openssl rand -hex 32
